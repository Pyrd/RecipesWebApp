{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "types": [
      "@types/node",
      "@types/slick-carousel",
      "@nuxt/types",
      "@nuxtjs/vuetify",
      "nuxt-i18n",
      "@nuxtjs/recaptcha",
      "@nuxtjs/toast"
    ],
    "incremental": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
